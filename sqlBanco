/* Create Tables */

Create table Rota
(
	id_rota int not null,
    nome varchar,
	tempoDias Integer,
	custoGrama Real,
	capacidadeTotal Real,
	origem varchar,
    destino varchar,
    tipo char,
    
 	primary key (id_rota)
    )
    
) Without Oids;

Create table Caminho
(
	id_rotaPai int not null,
    id_rotaFilho int,
    --id_rotaDestino int,
    --ordem int,
 	--primary key (id_rotaPai),
    constraint fk_rotaPai foreign key (id_rotaPai) references Rota (id_rota),
    constraint fk_rotaFilho foreign key (id_rotaFilho) references Rota (id_rota)
    --constraint fk_rotaDestino foreign key (id_rotaDestino) references Rota (id_rota)
    
) Without Oids;         

--inserção de rotas
select * from rota
