--pesquisas         
select distinct origem from rota order by origem
select distinct destino from rota order by origem

--find

select nome, tempoDias, custoGrama, capacidadeTotal
from rota 
where origem = 'D' and destino = 'A'

--drops
drop table Rota
drop table caminho
   

